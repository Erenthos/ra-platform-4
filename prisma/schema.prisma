generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  password    String
  role        Role
  createdAt   DateTime  @default(now())
  auctions    Auction[] @relation("BuyerAuctions")
  bids        Bid[]     @relation("SupplierBids")
}

model Auction {
  id          String       @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime     @default(now())
  endsAt      DateTime
  buyer       User         @relation("BuyerAuctions", fields: [buyerId], references: [id])
  buyerId     String
  items       AuctionItem[]
  bids        Bid[]
}

model AuctionItem {
  id          String   @id @default(cuid())
  name        String
  quantity    Float
  uom         String
  basePrice   Float
  auction     Auction  @relation(fields: [auctionId], references: [id])
  auctionId   String
}

model Bid {
  id           String   @id @default(cuid())
  totalValue   Float
  submittedAt  DateTime @default(now())
  supplier     User     @relation("SupplierBids", fields: [supplierId], references: [id])
  supplierId   String
  auction      Auction  @relation(fields: [auctionId], references: [id])
  auctionId    String

  @@unique([supplierId, auctionId]) // âœ… Composite unique constraint
}

enum Role {
  BUYER
  SUPPLIER
}
